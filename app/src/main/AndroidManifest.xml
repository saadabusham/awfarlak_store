<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.technzone.phoneapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.technzone.phoneapp.common.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="allowBackup">
        <activity android:name="com.technzone.phoneapp.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.technzone.phoneapp.ui.media.MediaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technzone.phoneapp.ui.dataview.viewimage.ViewImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technzone.phoneapp.ui.dataview.dataviewer.DataViewerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technzone.phoneapp.ui.cart.CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technzone.phoneapp.ui.wishlist.activities.WishListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technzone.phoneapp.ui.cart.PayedSuccessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.auth.AuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.more.settings.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.more.aboutus.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.purchase.PurchasesActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>